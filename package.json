{
  "name": "@danielr18/listr-tasks",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepository for shared tasks",
  "license": "MIT",
  "repository": "https://github.com/danielr18/listr-tasks-monorepo.git",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf node_modules pnpm-lock.yaml packages/*/node_modules examples/node_modules docs/node_modules",
    "build": "pnpm run -r build",
    "format": "pnpm run --parallel -r format",
    "lint": "pnpm run --parallel -r lint"
  },
  "simple-git-hooks": {
    "pre-commit": "[ -n \"$SKIP_GIT_HOOKS\" ] && true || pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,spec.ts}": [
      "prettier --log-level warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --log-level warn --write"
    ]
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^3.1.70",
    "@changesets/cli": "^2.29.8",
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.15.11",
    "@tsconfig/node18": "^18.2.6",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "jest-mock-process": "^2.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
